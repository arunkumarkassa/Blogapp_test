<div class="edit-profile-container">
  <h2 class="edit-profile-title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-profile-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "edit-profile-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "edit-profile-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="confirmation-info">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "edit-profile-label" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "edit-profile-input" %>
      <% if @minimum_password_length %>
        <br />
        <%
=begin%>
 <em><%= @minimum_password_length %> characters minimum</em> 
<%
=end%>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "edit-profile-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "edit-profile-input" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "edit-profile-label" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "edit-profile-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "edit-profile-submit" %>
    </div>
  <% end %>

  <h3 class="cancel-account-title">Cancel my account</h3>

  <div class="cancel-account-info">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "cancel-account-button" %></div>

  <%= link_to "Back", :back, class: "back-link" %>
</div>
