<h1 class="form-title">Create a new article</h1>
<div class= "new_form">
<div>
<%= form_with scope: :article, url: articles_path, local: true, html: { class: "article-form" } do |f| %>
  <p class="form-field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, class: "form-input" %>
  </p>
  <p class="form-field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, class: "form-textarea" %>
  </p>
  <p class="form-field">
    <%= f.label :image %><br/>
    <%= f.file_field :image, class: "form-file" %>
  </p>

  <p class="form-actions">
    <%= f.submit "Create Article", class: "form-submit" %>
  </p>
<% end %>


<%= link_to 'Back', articles_path, class: "form-link" %>
</div>
</div>