<h1 class="page-title">Articles listing page</h1>

<table class="articles-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.user.first_name + " " + article.user.last_name if article.user %></td>
        <td>
           <%= link_to article_path(article) do %>
            <%= image_tag article.image, size: "100x100" if article.image.attached? %>
            <% end %>
        </td> 
        <td><%= link_to 'Show', article_path(article), class: "action-link" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "action-link" %></td>
        <td><%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this?" }, class: "action-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination-container">
  <%= will_paginate @articles, class: "will_pagination" %>
</div>

