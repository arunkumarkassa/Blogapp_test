
<h1 class="article-title">Showing article details</h1>

<p class="article-detail"><strong>Title:</strong> <%= @article.title %></p>
<p class="article-detail"><strong>Description:</strong> <%= @article.description %></p>

<div class="article-image">
  <% if @article.image.attached? %>
    <%= image_tag @article.image, class: "image-size" %>
  <% end %>
</div>

<div class="article-actions">
  <%= link_to 'Edit', edit_article_path(@article), class: "action-link" %> 
  <%= button_to "Delete", article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure? You want to delete this?" }, class: 'action-button' %> 
  <%= link_to 'Return to articles listing', articles_path, class: "action-link" %>
</div>
